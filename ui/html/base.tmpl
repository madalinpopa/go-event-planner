{{ define "base" }}
    <!DOCTYPE html>
    <html lang="en" class="h-full">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="/static/img/favicon.ico">
        <link rel="stylesheet" href="/static/css/main.css" type="text/css">

        <title>{{ template "title" .}}</title>

        <style>
            @font-face {
                font-family: 'Pally-Variable';
                src: url('/static/fonts/Pally-Variable.woff2') format('woff2'),
                url('/static/fonts/Pally-Variable.woff') format('woff');
                font-weight: 400 700;
                font-display: swap;
                font-style: normal;
            }
        </style>

        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@2.1.0/dist/iconify-icon.min.js"></script>
    </head>

    <body class="antialiased h-full">

    <div class="min-h-[100dvh] grid grid-rows-[auto_1fr_auto] h-full">

        <header class="text-xl font-bold text-center">
            {{template "nav" .}}
        </header>

        <main class="h-full">
            {{template "main" .}}
        </main>

        <footer>
            {{template "footer" .}}
        </footer>

    </div>

    <script src="/static/js/main.js" type="text/javascript"></script>

    </body>
    </html>
{{ end }}